<!--Show file name-->
<script>
            $('#customFile').on('change',function(){
                var fileName = $(this).val();
                $(this).next('.custom-file-label').html(fileName);
            })
</script>
<!--Change icons-->
<script>
function deleteHover(el){
el.src="/image/trash-hover.png";
}
function deleteNotHover(el){
el.src="/image/trash.png";
}

function editHover(el){
el.src="/image/pen-hover.png";
}
function editNotHover(el){
el.src="/image/pen.png";
}

function showHover(el){
el.src="/image/eye-hover.png";
}
function showNotHover(el){
el.src="/image/eye.png";
}
</script>
<script>
   $(document).ready(function () {
            $('.toast').toast({
                delay: 5000
            });
            $('.toast').toast('show');
        });
</script>
<!--View edit modal-->
<script>
$(document).ready(function () {
    $('#itemManipulate-modal').modal('show');
});
</script>
<script>
$(document).ready(function () {
