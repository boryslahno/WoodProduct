<script>
   $(document).ready(function () {
            $('.toast').toast({
                delay: 5000
            });
            $('.toast').toast('show');
        });
</script>
<!--View edit modal-->
<script>
$(document).ready(function () {
    $('#itemManipulate-modal').modal('show');
});
</script>
<script>
$(document).ready(function () {
    $('#addItem-modal').modal('show');
});
</script>
<!--View modal and popover-->
<script>
    $('.addItem').click(function () {
     $('#selectCategory-modal').modal('show');
     $('[data-toggle="popover"]').popover('hide');
});
</script>
<!--View popover-->
<script>
$(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });
</script>
